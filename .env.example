# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fastapi_project
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/fastapi_project_test

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Application Configuration
APP_NAME=FastAPI Form Microservice
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Security Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# File Storage Configuration (S3/MinIO)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_BUCKET_NAME=fastapi-forms
AWS_REGION=us-east-1
S3_ENDPOINT_URL=http://localhost:9000  # For MinIO in development

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Monitoring Configuration
PROMETHEUS_METRICS_PATH=/metrics
LOG_LEVEL=INFO